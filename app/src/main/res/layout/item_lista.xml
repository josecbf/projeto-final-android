<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:id="@+id/tvNome"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:id="@+id/tvGenero" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNome" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="91dp"
            android:layout_height="20dp"
            android:id="@+id/tvAno"
            app:layout_constraintStart_toEndOf="@+id/tvGenero"
            android:layout_marginStart="24dp" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNome"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvAtores"
            app:layout_constraintTop_toBottomOf="@+id/tvGenero"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="24dp" android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>